{
    "name": "joomla/router",
    "type": "joomla-package",
    "description": "Joomla Router Package",
    "keywords": ["joomla", "framework", "router"],
    "homepage": "https://github.com/joomla-framework/router",
    "license": "GPL-2.0+",
    "require": {
        "php": "^5.3.10|~7.0",
    	"joomla/controller": "~1.0",
    	"joomla/input": "~1.0"
    },
    "require-dev": {
    	"joomla/test": "~1.0",
        "phpunit/phpunit": "~4.8|~5.0",
        "squizlabs/php_codesniffer": "1.*"
    },
    "autoload": {
    	"psr-4": {
            "Joomla\\Router\\": "src/"
    	}
    },
    "autoload-dev": {
    	"psr-4": {
            "Joomla\\Router\\Tests\\": "Tests/"
    	}
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
